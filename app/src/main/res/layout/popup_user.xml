<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/text_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_welcome"
            android:layout_marginLeft="20dp"
            android:textColor="#0bbc1a"
            android:textSize="@dimen/farmer_reg" />

        <TextView
            android:id="@+id/text_dpc_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/text_welcome"
            android:textColor="@color/black"
            android:textSize="@dimen/farmer_reg" />


        <View
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/text_dpc_user"
            android:layout_marginTop="10dp"
            android:background="#D4D4D4" />

        <TextView
            android:id="@+id/text_dpc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/user"
            android:text="@string/title_Dpc_profile"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="@dimen/farmer_reg" />

        <View
            android:id="@+id/view_dpc"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/text_dpc"
            android:layout_marginTop="10dp"
            android:background="#D4D4D4" />


        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_dpc"
            android:layout_marginTop="10dp"
            android:text="@string/txt_DPC_Code"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="@dimen/farmer_reg" />


        <TextView
            android:id="@+id/tV_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/code"
            android:layout_marginTop="10dp"
            android:text=""
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="@dimen/farmer_reg" />

        <View
            android:id="@+id/view_dpc_code"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tV_code"
            android:layout_marginTop="10dp"
            android:background="#D4D4D4" />




        <TextView
            android:id="@+id/constant_text_last_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_dpc_code"
            android:layout_marginTop="10dp"
            android:text="@string/Last_login"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="@dimen/farmer_reg" />

        <TextView
            android:id="@+id/text_last_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/constant_text_last_login"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/farmer_reg" />
        <Button
            android:id="@+id/button_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_last_login"
            android:layout_marginTop="10dp"
            android:background="#F20f44"
            android:text="@string/logout"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/farmer_reg" />
    </RelativeLayout>
</LinearLayout>







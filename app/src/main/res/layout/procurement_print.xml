<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.6"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/txt_Net_weight"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title"/>

                    <TextView
                        android:id="@+id/ed_netweight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/black_border"
                        android:gravity="right"
                        android:imeOptions="actionNext"
                        android:nextFocusDown="@+id/edit_text_loan_number"
                        android:padding="8dp"
                        android:textSize="@dimen/title"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:background="@drawable/layout_border"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.10"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".72"
                            android:text="@string/txt_purchaserate"
                            android:textSize="@dimen/title"/>

                        <TextView
                            android:id="@+id/purchaserate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.26"
                            android:drawableLeft="@drawable/ic_rupee"
                            android:gravity="left|center_vertical"
                            android:text=""
                            android:textSize="@dimen/title"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.10"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".72"
                            android:text="@string/txt_bonusrate"
                            android:textSize="@dimen/title"/>

                        <TextView
                            android:id="@+id/bonusrate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.26"
                            android:drawableLeft="@drawable/ic_rupee"
                            android:gravity="left|center_vertical"
                            android:text=""
                            android:textSize="@dimen/title"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".90"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".72"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_totalrate"
                                android:textSize="@dimen/title"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_subtotalrate"
                                android:textSize="@dimen/title"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/totalrate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.26"
                            android:drawableLeft="@drawable/ic_rupee"
                            android:gravity="left|center_vertical"
                            android:text=""
                            android:textSize="@dimen/title"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".90"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".72"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_totalamt"
                                android:textSize="@dimen/title"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_subtotalamt"
                                android:textSize="@dimen/title"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/totalamount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.26"
                            android:drawableLeft="@drawable/ic_rupee"
                            android:gravity="left|center_vertical"
                            android:text=""
                            android:textSize="@dimen/title"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/layout_border"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.03"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".70"
                            android:text="@string/txt_gradequintal"
                            android:textSize="@dimen/title"/>

                        <TextView
                            android:id="@+id/grade_cut"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1.30"
                            android:background="@drawable/black_border"
                            android:drawableLeft="@drawable/ic_rupee"
                            android:gravity="left|center"
                            android:imeOptions="actionNext"
                            android:nextFocusDown="@+id/edit_text_loan_number"
                            android:textSize="@dimen/title"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.03"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".70"
                            android:text="@string/txt_moisturequintal"
                            android:textSize="@dimen/title"/>

                        <TextView
                            android:id="@+id/moisture_cut"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1.30"
                            android:background="@drawable/black_border"
                            android:drawableLeft="@drawable/ic_rupee"
                            android:gravity="left|center"
                            android:imeOptions="actionNext"
                            android:nextFocusDown="@+id/edit_text_loan_number"
                            android:textSize="@dimen/title"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.03"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".70"
                            android:text="@string/txt_addquintal"
                            android:textSize="@dimen/title"/>

                        <TextView
                            android:id="@+id/additional_cut"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1.30"
                            android:background="@drawable/black_border"
                            android:drawableLeft="@drawable/ic_rupee"
                            android:gravity="left|center"
                            android:imeOptions="actionNext"
                            android:nextFocusDown="@+id/edit_text_loan_number"
                            android:textSize="@dimen/title"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".95"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".70"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_totalcutquintal"
                                android:textSize="@dimen/title"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_subtotalcutquintal"
                                android:textSize="@dimen/title"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/total_cut"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.30"
                            android:drawableLeft="@drawable/ic_rupee"
                            android:gravity="left|center_vertical"
                            android:text=""
                            android:textSize="@dimen/title"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".96"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".70"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_totalamtquintal"
                                android:textSize="@dimen/title"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_subtotalamtquintal"
                                android:textSize="@dimen/title"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/total_cut_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.30"
                            android:drawableLeft="@drawable/ic_rupee"
                            android:gravity="left|center_vertical"
                            android:text=""
                            android:textSize="@dimen/title"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.25"
            android:background="@drawable/layout_border"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_totalamt"
                android:textColor="#FF8300"
                android:textSize="@dimen/title"/>

            <TextView
                android:id="@+id/totalamount_calc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="()"
                android:textSize="@dimen/title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="@dimen/title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/txt_totalamtquintal"
                android:textColor="#FF8300"
                android:textSize="@dimen/title"/>

            <TextView
                android:id="@+id/totalcut_amount_calc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="()"
                android:textSize="@dimen/title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="="
                android:textColor="@color/black"
                android:textSize="@dimen/title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/txt_netamount"
                android:textColor="#FF8300"
                android:textSize="@dimen/title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_rupee"
                android:textColor="#FF8300"
                android:textSize="@dimen/title"/>

            <TextView
                android:id="@+id/netamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textSize="@dimen/title"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.25"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"
            >
            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:gravity="bottom">-->
            <!--&lt;!&ndash; <TextView-->
            <!--android:id="@+id/num_txt_1"-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:background="@drawable/procurement_circle_selected"-->
            <!--android:gravity="center"-->
            <!--android:text="1"-->
            <!--android:textColor="#FFFFFF"-->
            <!--android:textSize="20dp" />-->
            <!--<TextView-->
            <!--android:id="@+id/num_txt_2"-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:background="@drawable/procurement_circle"-->
            <!--android:gravity="center"-->
            <!--android:text="2"-->
            <!--android:textColor="#FFFFFF"-->
            <!--android:textSize="20dp" />&ndash;&gt;-->
            <!--</LinearLayout>-->
            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:gravity="bottom|right">-->
            <Button
                android:id="@+id/btn_print"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background_green"
                android:text="@string/print"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/title"/>

            <Button
                android:id="@+id/btn_close"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_hash"
                android:text="@string/txt_close"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/title"/>
            <!--</LinearLayout>-->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

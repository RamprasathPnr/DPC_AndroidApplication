                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_weight="0.92"-->
                    <!--android:gravity="center">-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.92"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/txt_num_land"
                        android:textColor="@color/black"
                        android:textSize="17sp"/>
                    <!--</LinearLayout>-->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#D4D4D4"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:weightSum="5"
                    android:background="#CFCFCF">
                    <View
                        android:layout_width="match_parent"
                        android:layout_weight="1.18"
                        android:layout_height="match_parent"
                        android:background="#D4D4D4" />
                    <EditText
                        android:id="@+id/farmer_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.029"
                        android:background="@drawable/border_scarch"
                        android:gravity="center"
                        android:hint="@string/btn_Search"
                        android:imeOptions="actionNext"
                        android:inputType="textCapCharacters"
                        android:maxLength="11"
                        android:nextFocusDown="@+id/nm_sch"
                        android:singleLine="true"/>

                    <EditText
                        android:id="@+id/fm_nm_sch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_scarch"
                        android:gravity="center"
                        android:layout_weight="1.051"
                        android:hint="@string/btn_Search"
                        android:imeOptions="actionNext"
                        android:maxLength="45"
                        android:nextFocusDown="@+id/mob_scarch"
                        android:singleLine="true"/>

                    <EditText
                        android:id="@+id/fm_mob_scarch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_scarch"
                        android:gravity="center"
                        android:layout_weight="1.06"
                        android:hint="@string/btn_Search"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLength="10"
                        android:singleLine="true"/>

                    <ImageView
                        android:id="@+id/btn_search_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_search"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#D4D4D4" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.65">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view_lands"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_weight="1.7"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/btn_add_farmer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_background_green"
                    android:clickable="true"
                    android:visibility="invisible">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ic_plus"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="80dp"
                        android:text="@string/Add_Farmer"
                        android:textColor="@color/white"
                        android:textSize="20dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/Total_Farmers"
                        android:textColor="@color/black"
                        android:textSize="23dp"/>

                    <TextView
                        android:id="@+id/tot_farmer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="23dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right">

                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/button_background_blue"
                        android:text="@string/txt_cancel"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <include
            android:id="@+id/bottom_layout"
            layout="@layout/footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>
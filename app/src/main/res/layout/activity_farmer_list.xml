                        android:maxLength="45"
                        android:nextFocusDown="@+id/mob_scarch"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/mob_scarch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.080"
                        android:background="@drawable/border_scarch"
                        android:gravity="center"
